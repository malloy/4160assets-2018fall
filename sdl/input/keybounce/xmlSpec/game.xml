<meteor>
  <!-- We'll start putting them at meteorMinX, and stop at meteorMaxX -->
  <!-- Of course, their horizontal position is affected by SpeedX     -->
  <startLoc minX="2500" maxX="5500" y="0"/>
  <file>images/asteroid.png</file>
  <frames>30</frames>
  <width>60</width>
  <height>60</height>
  <rows>6</rows>
  <columns>5</columns>
  <frameInterval>9</frameInterval>
  <frameMin>6</frameMin>
  <minFrameDelay>0.40</minFrameDelay>
  <src x="0" y="0"/>
  <speed x="25" y="200"/>
  <minSpeed x="5" y="100"/>
  <scale min="0.2" max="2.0"/>
  <transparency>true</transparency>
  <chunk>
    <size>25</size>
    <distance>200</distance>
  </chunk>
</meteor>

<pter>
  <file>images/pterFlyRight.bmp</file>
  <frames>4</frames>
  <frameInterval>25</frameInterval>
